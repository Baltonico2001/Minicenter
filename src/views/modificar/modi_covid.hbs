<div class="container p-6">
    <div class="row">
        <div class="col-md-6 mx-auto">
        {{#each id}}
            <div class="card"> 
                <div class="card-bady">
                    <form action="/covid/modificar/{{id}}" method="post">
                        <div class="form-group">
                            <label for=""> M O D I F I C A R</label>


                        </div>NOMBRE
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" value="{{nombre}}">

                        </div>APELLIDO
                        <div class="form-group">
                            <input class="form-control" type="text" name="apellido" value="{{apellido}}">

                        </div>TELEFONO
                        <div class="form-group">
                            <input class="form-control" type="text" name="telefono" value="{{telefono}}">
                         
                        </div>TEMPERATURA
                        <div class="form-group">
                            <input class="form-control" type="text" name="temperatura" value="{{temperatura}}">

                        </div>SINTOMAS
                        <div class="form-group">
                            <input class="form-control" type="text" name="sintomas" value="{{sintomas}}">
                         

                         
                        <div class="form-group">
                            <button  type="submit" class="btn btn-success btn-block" >G U A R D A R</button>

        {{/each }}

                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 