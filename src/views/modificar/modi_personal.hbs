<div class="container p-6">
    <div class="row">
        <div class="col-md-6 mx-auto">
        {{#each id}}
            <div class="card"> 
                <div class="card-bady">
                    <form action="/personal/modificar/{{id}}" method="post">
                        <div class="form-group">
                            <label for=""> M O D I F I C A R</label>

                        </div>NOMBRE
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" value="{{nombre}}">

                        </div>APELLIDO
                        <div class="form-group">
                            <input class="form-control" type="text" name="apellido" value="{{apellido}}">
                         
                        </div>CEDULA
                        <div class="form-group">
                            <input class="form-control" type="text" name="cedula" value="{{cedula}}">

                        </div>TELEFONO
                        <div class="form-group">
                            <input class="form-control" type="text" name="telefono" value="{{telefono}}">
                         

                        </div>CARGO
                        <div class="form-group">
                            <input class="form-control" type="text" name="cargo" value="{{cargo}}">

                        </div>SALARIO
                        <div class="form-group">
                            <input class="form-control" type="text" name="salario" value="{{salario}}">
                         
                        <div class="form-group">
                            <button  type="submit" class="btn btn-success btn-block" >G U A R D A R</button>

        {{/each }}

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>